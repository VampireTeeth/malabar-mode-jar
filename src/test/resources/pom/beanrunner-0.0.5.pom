<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.sf.beanrunner</groupId>
	<artifactId>beanrunner</artifactId>
	<version>0.0.5</version>
	<description>This project provides a meaningful way to increase
		code coverage of your jUnit and TestNG tests. Unit testing Java Beans
		can be a tedious task. The goal of this project is to provide an
		automated way to unit test the getters and setters of a class.
	</description>
	<url>http://beanrunner.sourceforge.net</url>
	<inceptionYear>2008</inceptionYear>
	<name>Bean Runner</name>
	<scm>
    	<connection>scm:svn:https://beanrunner.svn.sourceforge.net/svnroot/beanrunner/beanrunner/trunk</connection>
    	<developerConnection>scm:svn:https://beanrunner.svn.sourceforge.net/svnroot/beanrunner/beanrunner/trunk</developerConnection>
    	<url>http://beanrunner.svn.sourceforge.net/</url>
  	</scm>
	
	<distributionManagement>
		<repository>
			<id>sf-deploy</id>
			<name>Bean Runner Sourceforge Maven 2 repository</name>
			<url>
				scp://m0smith@shell.sourceforge.net/home/groups/b/be/beanrunner/htdocs/maven2/
			</url>
		</repository>
		<snapshotRepository>
			<id>sf-deploy</id>
			<name>Bean Runner Sourceforge Snapshot Maven 2 repository</name>
			<url>
				scp://m0smith@shell.sourceforge.net/home/groups/b/be/beanrunner/htdocs/maven2-snapshots/
			</url>
			<uniqueVersion>false</uniqueVersion>
		</snapshotRepository>
		<site>
			<id>sf-deploy</id>
			<name>Sourceforge Bean Runner Project Site</name>
			<url>
				scp://m0smith@shell.sourceforge.net/home/groups/b/be/beanrunner/htdocs
			</url>
		</site>
	</distributionManagement>
	
	<developers>
		<developer>
			<id>m0smith</id>
			<name>Matthew O. Smith</name>
			<email>m0smith@users.sourceforge.net</email>
			<url>http://www.software-ninja.com</url>
		</developer>
	</developers>
	<issueManagement>
		<url>http://sourceforge.net/tracker/?group_id=237935</url>
	</issueManagement>
	<licenses>
		<license>
			<name>Mozilla Public License 1.0 (MPL)</name>
			<url>http://www.mozilla.org/MPL/MPL-1.0.html</url>
			<distribution>repo</distribution>
			<comments>The license is regarded as a weak copyleft. Specifically, source code copied or changed under the MPL must stay under the MPL. Unlike strong copyleft licenses, the code under the MPL may be combined in a program with proprietary files which would otherwise be derivative works of the MPL code.</comments>
		</license>
	</licenses>
	
	<mailingLists>
		<mailingList>
			<name>User Support</name>
			<post>beanrunner-user@lists.sourceforge.net</post>
			<subscribe>
				https://lists.sourceforge.net/lists/listinfo/beanrunner-user
			</subscribe>
			<unsubscribe>
				https://lists.sourceforge.net/lists/listinfo/beanrunner-user
			</unsubscribe>
			<archive />
		</mailingList>
	</mailingLists>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.4</source>
					<target>1.4</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
		</dependency>
		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
			<version>3.2</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<reporting>
		<plugins>
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin
				</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-checkstyle-plugin</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-surefire-report-plugin
				</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-jxr-plugin</artifactId>
			</plugin>
		</plugins>
	</reporting>
</project>
