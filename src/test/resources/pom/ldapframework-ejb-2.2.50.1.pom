<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
	
	<parent>
      <groupId>org.ihc.ldapframework</groupId>
      <artifactId>ldapframework-pom</artifactId>
	  <version>2.2.50</version>
	</parent>
	
	<version>2.2.50.1</version>
    <groupId>org.ihc.ldapframework</groupId>
    <artifactId>ldapframework-ejb</artifactId>	
	<packaging>ejb</packaging>	
    <name>Ldap Framework EJB</name>
    <description>Ldap Framework Java EE application</description>
    
    <dependencies>       
		<dependency>
            <groupId>javax.j2ee</groupId>
            <artifactId>j2ee</artifactId>
            <version>1.3.1</version>
            <scope>provided</scope>
        </dependency>

        <!--<dependency>
            <groupId>com.sun.xml.parsers</groupId>
            <artifactId>jaxp-ri-fcs</artifactId>
            <version>1.4</version>
            <scope>test</scope>
        </dependency>
        
        <dependency>
            <groupId>javax.xml.parsers</groupId>
            <artifactId>jaxp-api-fcs</artifactId>
            <version>1.4</version>
            <scope>test</scope>
        </dependency>-->

    </dependencies>
	
	<build>
      <finalName>
          ldapframework
      </finalName>
    
	<resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
	
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ejb-plugin</artifactId>
        <!--<version>2.0.0.1</version>-->
        <configuration>
          <archive>
            <addMavenDescriptor>false</addMavenDescriptor>
          </archive>
          <generateClient>true</generateClient>
		  <clientExcludes>
			<clientExclude>**/*.xml</clientExclude>
			<clientExclude>**/LdapC*Impl*</clientExclude>
			<clientExclude>**/LdapD*Impl*</clientExclude>
			<clientExclude>**/LdapU*Impl*</clientExclude>
			<clientExclude>**/*Bean*</clientExclude>
			<clientExclude>**/*Adapter*</clientExclude>
			<clientExclude>resources/ihc-ldap-ejb.properties</clientExclude>
			<clientExclude>com/ihc/security/ldap/cracklib/**</clientExclude>
			<clientExclude>com/ihc/security/ldap/crypto/**</clientExclude>
			<clientExclude>com/ihc/security/ldap/util/**</clientExclude>
			<clientExclude>com/novell/**</clientExclude>
			<clientExclude>com/ihc/security/ldap/util/LdapProperties*</clientExclude>
		  </clientExcludes>
		  
        </configuration>
      </plugin>
      <!--
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <executions>
          <execution>
            <phase>install</phase>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      -->
    </plugins>
  </build>
	
</project>
