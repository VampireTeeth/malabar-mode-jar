<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.ihc.framework</groupId>
        <artifactId>top-level-pom</artifactId>
        <version>1.1.5</version>
    </parent>

    <groupId>org.ihc.framework</groupId>
    <artifactId>java6-pom</artifactId>
    <packaging>pom</packaging>
    <version>1.1.5</version>
    <name>Intermountain Healthcare Java 1.6 POM</name>
    <!-- Without this Maven will add java6-pom to the url of child projects -->
    <url>http://maven.co.ihc.com/</url>

	<developers>
        <developer>
            <id>sbelida</id>
            <name>Sudha Belida</name>
        </developer>
	</developers>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>


    <!--Without this Maven will add java6-pom to the site file-path of child projects -->
	
    
    <profiles>
      <profile>
	<id>nexus</id>
	<distributionManagement>
	  <site>
	    <id>nexus-deploy</id>
	    <url>dav:http://artifacts.co.ihc.com/repomgr/content/sites/intermountain/</url>
	  </site>
	</distributionManagement>
      </profile>
    
      
      <profile>
	<id>archiva</id>
	<distributionManagement>
	  <site>
            <id>ihc-site-deploy</id>
            <url>file:///usr/local/maven/webapps/docs</url>
          </site>
	</distributionManagement>
      </profile>
    </profiles>


    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.6.1</version>
                <configuration>
                    <aggregate>true</aggregate>
                    <links>
                        <link>http://java.sun.com/j2se/1.5.0/docs/api/</link>
                        <link>http://www.hibernate.org/hib_docs/v3/api/</link>
                        <link>http://static.springframework.org/spring/docs/2.5.x/api/</link>
                    </links>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-pmd-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <sourceEncoding>UTF-8</sourceEncoding>
                    <targetJdk>1.5</targetJdk>
                </configuration>
            </plugin>
        </plugins>
    </reporting>
</project>
