<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.ihc.framework</groupId>
    <artifactId>framework-resources</artifactId>
    <version>1.0.0</version>
    <packaging>jar</packaging>
    <name>EWD Framework Resources</name>
    <description>Enterprise Web Development Framework Resources</description>
    <url>http://maven.co.ihc.com/framework-resources</url>
    <inceptionYear>2008</inceptionYear>
    <scm>
        <url>https://subversion.co.ihc.com/webdev/general/infrastructure/framework/framework-resources/trunk</url>
        <developerConnection>
            scm:svn:https://subversion.co.ihc.com/webdev/general/infrastructure/framework/framework-resources/trunk
        </developerConnection>
    </scm>

    <distributionManagement>
        <repository>
            <id>ihc-deploy</id>
            <name>Intermountain Healthcare Release Repository, Deployment Definition</name>
            <url>file:///usr/local/maven/repos/ihc</url>
        </repository>
        <snapshotRepository>
            <id>ihc-deploy</id>
            <name>Intermountain Healthcare Release Repository, Deployment Definition</name>
            <url>file:///usr/local/maven/repos/ihc</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
        <site>
            <id>ihc-site-deploy</id>
            <name>Intermountain Healthcare Site Deployment Location</name>
            <url>file:///usr/local/maven/webapps/docs/${artifactId}</url>
        </site>
    </distributionManagement>

    <developers>
        <developer>
            <id>smseiter</id>
            <name>Scott Seiter</name>
            <email>smseiter@ihc.com</email>
        </developer>
        <developer>
            <id>gmdayley</id>
            <name>Gabriel Dayley</name>
            <email>gmdayley@ihc.com</email>
        </developer>
        <developer>
            <id>jkitterm</id>
            <name>Joshua Kitterman</name>
            <email>jkitterm@ihc.com</email>
        </developer>
        <developer>
            <id>vkoneru</id>
            <name>Vamsee Koneru</name>
            <email>vkoneru@ihc.com</email>
        </developer>
    </developers>

    <build>
        <plugins>
            <plugin>
                <groupId>org.ihc.mojo</groupId>
                <artifactId>ihc</artifactId>
                <executions>
                    <execution>
                        <phase>post-site</phase>
                        <goals>
                            <goal>site-prepare</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
