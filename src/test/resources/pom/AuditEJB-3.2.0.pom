<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.ihc.audit</groupId>
        <artifactId>audit-parent-pom</artifactId>
        <version>3.2.0</version>
    </parent>
    <artifactId>AuditEJB</artifactId>
    <packaging>ejb</packaging>
    <name>AuditEJB</name>
    <description>Audit Enterprise Java Bean and Client</description>
    <scm>
        <url>https://subversion.co.ihc.com/webdev/general/service/AuditEJB/trunk/ejb</url>
        <connection>scm:svn:https://subversion.co.ihc.com/webdev/general/service/AuditEJB/trunk/ejb</connection>
    </scm>

    <dependencies>
        <dependency>
            <groupId>javax.j2ee</groupId>
            <artifactId>j2ee</artifactId>
            <version>1.3.1</version>
            <scope>provided</scope>
        </dependency>
        <!-- needed for integration testing -->
        <dependency>
            <groupId>com.bea</groupId>
            <artifactId>weblogic</artifactId>
            <version>8.1.4.0</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.14</version>
            <scope>compile</scope>
        </dependency>
        <!-- 
        <dependency>
            <groupId>org.ihc.security</groupId>
            <artifactId>SecurityClientEJB</artifactId>
            <version>2.2.5</version>
        </dependency>
         -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.2</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <!--
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clover-plugin</artifactId>
                <version>2.4.1</version>
                <configuration>
                    <cloverDatabase>${project.build.directory}/clover.db</cloverDatabase>
                    <generateHtml>true</generateHtml>
                </configuration>
            </plugin>
        </plugins>
    </reporting>
    -->

    <build>
        <finalName>
            AuditEJB
        </finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ejb-plugin</artifactId>
                <version>2.1</version>
                <configuration>
                    <archive>
                        <addMavenDescriptor>false</addMavenDescriptor>
                    </archive>
                    <generateClient>true</generateClient>
                    <clientExcludes>
                        <clientExclude>**/*Bean.class</clientExclude>
                        <clientExclude>**/*Writer.class</clientExclude>
                        <clientExclude>**/*_*.class</clientExclude>
                        <clientExclude>**/*.properties</clientExclude>
                        <clientExclude>**/*.xml</clientExclude>
                        <clientExclude>**/common/log4j/*.*</clientExclude>
                        <clientExclude>**/common/weblogic/log/*.*</clientExclude>
                    </clientExcludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clover-plugin</artifactId>
                <version>2.4.1</version>
                <configuration>
                    <targetPercentage>0%</targetPercentage>
                    <licenseLocation>${basedir}/clover.license</licenseLocation>
                    <jdk>1.4</jdk>
                </configuration>
				<executions>
					<execution>
						<id>main</id>
						<phase>verify</phase>
						<goals>
							<goal>instrument</goal>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
        </plugins>
    </build>
</project>