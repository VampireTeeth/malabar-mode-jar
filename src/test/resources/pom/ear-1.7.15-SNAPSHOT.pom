<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>ear</artifactId>
	<packaging>ear</packaging>
	<name>PortalMessaging ear assembly</name>
	<parent>
	  <groupId>com.ihc.portalmessaging</groupId>
	  <artifactId>PortalMessaging</artifactId>
	  <version>1.7.15-SNAPSHOT</version>
	</parent>
	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>PortalMessaging-EJB</artifactId>
			<version>${project.version}</version>
			<type>ejb</type>
		</dependency>
	</dependencies>
	<build>
		<finalName>PortalMessaging</finalName>
		<plugins>
			<plugin>
				<groupId>org.ihc.mojo</groupId>
				<artifactId>ihc</artifactId>
				<version>1.4.1</version>
				<executions>
					<execution>
						<id>genprops</id>
						<phase />
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-ear-plugin</artifactId>
                                <version>2.8</version>
				<configuration>
					<displayName>Portal Messaging EJB Application</displayName>
					<defaultLibBundleDir>APP-INF/lib</defaultLibBundleDir>
					<archive>
						<manifest>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
							<addClasspath>true</addClasspath>
						</manifest>
						<manifestEntries>
							<Implementation-Build>${buildNumber}</Implementation-Build>
							<Implementation-Tag>${tag.value}</Implementation-Tag>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>
    <properties>
        <netbeans.hint.deploy.server>gfv3ee6</netbeans.hint.deploy.server>
    </properties>
</project>
